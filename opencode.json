{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
      "edit": "ask",
      "bash": "ask",
      "skill": "ask",
      "webfetch": "ask",
      "doom_loop": "ask",
      "external_directory": "ask"
    },
    "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "playwright": {
    "type": "local",
    "command": [
        "npx",
        "@playwright/mcp@latest"
    ],
    "enabled": true
    },
    "exa": {
      "type": "local",
      "command": ["npx", "-y", "exa-mcp-server"],
      "enabled": true
    },
    "bun-docs": {
      "type": "remote",
      "url": "https://bun.com/docs/mcp",
      "enabled": true
    }
  }
}